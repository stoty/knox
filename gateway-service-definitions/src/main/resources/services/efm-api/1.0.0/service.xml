<service name="efm-api" role="EFM-API" version="1.0.0">
   <metadata>
      <context>/efm-api</context>
      <description>Edge Flow Manager API.</description>
      <shortDesc>EFM API</shortDesc>
      <type>API</type>
      <samples>
         <sample>
            <description>Check the access status of the current user</description>
            <method>GET</method>
            <path>access</path>
         </sample>
         <sample>
            <description>Get all MiNiFi agent classes that are registered with this C2 server.</description>
            <method>GET</method>
            <path>agent-classes</path>
         </sample>
         <sample>
            <description>You can check EFM's REST API Reference Here</description>
            <value>https://docs.cloudera.com/cem/latest/rest-api-reference/index.html</value>
         </sample>
      </samples>

   </metadata>
   <routes>
      <route path="/efm-api/**">
         <rewrite apply="EFM-API/efm-api/inbound/path" to="request.url"/>
         <rewrite apply="EFM-API/efm-api/outbound/swagger" to="response.body"/>
      </route>
      <route path="/efm-api/**?**">
         <rewrite apply="EFM-API/efm-api/inbound/query" to="request.url"/>
         <rewrite apply="EFM-API/efm-api/outbound/swagger" to="response.body"/>
      </route>
   </routes>
</service>